configuration {
  drun-display-format: "{name}";
  font: "Fira Code 16";
  modi: "drun,run,window";
  fullscreen: false;
  sidebar-mode: false;
  disable-history: false;
}

* {
  bg: #222222;
  bg-alt: #222222;
  fg: #E8754F;
  fg-alt: #ffffff;

  background-color: @bg;
  border: 0;
  margin: 0;
  padding: 0;
  spacing: 0;
}

element, entry, prompt {
  padding: 10;
  text-color: @fg-alt;
}

element selected {
  background-color: @bg-alt;
  text-color: @fg;
}

inputbar {
  children: [entry];
}

listview {
  lines: 14;
  scrollbar: true;
}

mainbox {
  children: [inputbar, listview];
}

scrollbar {
  background-color: @bg-alt;
  handle-color: @fg;
  padding: 2;
  margin: 0 0 0 10;
}

window {
  border: 2;
  border-color: @fg-alt;
  padding: 10;
  transparency: "real";
}
